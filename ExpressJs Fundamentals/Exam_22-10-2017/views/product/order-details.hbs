<h1>Order details</h1>
<div class="catalog">
    <div class="column">
        <img src="{{order.product.imageUrl}}">
    </div>
    <div class="column">
        <h2 style="text-transform: capitalize">{{order.product.category}} doner, {{order.product.size}}cm</h2>
        <h3>From 22.Oct 2017 10:35</h3>
        <br>
        <div class="toppings">
            <h3>Toppings</h3>
            {{#each order.selectedToppings}}
                {{this}} <br>
            {{else}}
                <p>No toppings</p>
            {{/each}}
        </div>
    </div>
    <div class="status">
        <div class="status">
            <div class="status-block">
                <span class="progress-right"></span>
                <span class="checkpoint current"></span><br>
                Pending
            </div>
            <div class="status-block">
                <span class="progress-left"></span>
                <span class="progress-right"></span>
                <span class="checkpoint"></span><br>
                In progress
            </div>
            <div class="status-block">
                <span class="progress-left"></span>
                <span class="progress-right"></span>
                <span class="checkpoint"></span><br>
                In transit
            </div>
            <div class="status-block">
                <span class="progress-left"></span>
                <span class="checkpoint"></span><br>
                Delivered
            </div>
        </div>
    </div>
</div>