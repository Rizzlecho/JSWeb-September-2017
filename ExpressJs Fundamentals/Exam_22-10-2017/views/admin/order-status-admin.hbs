<main>
    <h1>Manage orders</h1>
    <div class="orders">
        <form method="post">
            {{#each orders}}
                <div class="order">
                    <span class="order-time">{{this.date}}</span>
                    <span class="order-name">{{this.product.category}} doner, {{this.product.size}} cm</span>
                    <input name="orderId" type="hidden" value="{{this._id}}">
                    <select name="status">
                        <option selected="selected" value="pending" selected>Pending</option>
                        <option value="inProgress">In Progress</option>
                        <option value="inTransit" >In Transit</option>
                        <option value="delivered">Delivered</option>
                    </select>
                    <a href="/details/{{this._id}}" class="button order-button">Details</a>
                </div>

            {{else}}
                <p>There are no orders!</p>
            {{/each}}

            <input type="submit" class="buttonSave" value="Save Changes">

        </form>
    </div>
</main>